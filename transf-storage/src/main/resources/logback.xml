<configuration>

    <property name="LOG_HOME" value="./logs" />

    <property name="PATTERN" value="%d{YYYY-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="DEVELOP" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${PATTERN}</pattern>
        </encoder>
        <fileNamePattern>${LOG_HOME}/develop-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
        <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
            <maxFileSize>100MB</maxFileSize>
        </timeBasedFileNamingAndTriggeringPolicy>
    </appender>

    <root level="ALL">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="DEVELOP"/>
    </root>

    <!-- Примеры настройки логгеров для различных библиотек -->
    <logger name="org.eclipse.jetty" level="INFO"/>
    <logger name="io.ktor" level="ALL"/>
    <logger name="org.apache.kafka" level="WARN"/>
    <logger name="org.jetbrains.exposed" level="ALL"/>
    <logger name="io.insert-koin" level="ALL"/>
    <logger name="dev.inmo.tgbotapi" level="INFO"/>

    <!-- При необходимости можно добавить логгеры для других компонентов -->
</configuration>
